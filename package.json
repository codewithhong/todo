{
  "name": "todo",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "description": "A simple todo app",
  "author": "Lai Tsz Hong <info@honghong.me> (https://github.com/codewithhong/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codewithhong/todo.git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier -w .",
    "type-check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "prettier": "@codewithhong/prettier-config",
  "dependencies": {
    "@codewithhong/ui": "^2.0.0",
    "@codewithhong/utils": "^2.0.0",
    "@radix-ui/react-dialog": "^1.0.4",
    "@tabler/icons-react": "^2.20.0",
    "@vercel/analytics": "^1.0.1",
    "clsx": "^1.2.1",
    "firebase": "^9.22.1",
    "next": "13.4.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-firebase-hooks": "^5.1.1",
    "react-hot-toast": "^2.4.1",
    "sharp": "^0.32.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@codewithhong/eslint-config": "^2.0.0",
    "@codewithhong/prettier-config": "^2.0.0",
    "@codewithhong/tsconfig": "^2.0.0",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.2.4",
    "@types/uuid": "^9.0.1",
    "autoprefixer": "^10.4.14",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.41.0",
    "eslint-config-next": "13.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "*.{json,css,scss,md,mdx,js,jsx,ts,tsx,cjs,mjs}": [
      "prettier -c"
    ]
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "@codewithhong/eslint-config"
    ],
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": "latest"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
